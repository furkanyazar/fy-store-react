{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
